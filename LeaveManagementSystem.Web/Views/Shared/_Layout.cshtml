<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LeaveManagementSystem.Web</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LeaveManagementSystem.Web.styles.css" asp-append-version="true" />
</head>
<body>

    @if (User.Identity.IsAuthenticated)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">

                <div class="container-fluid">

                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Leave Management System</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>


                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                        <ul class="navbar-nav flex-grow-1">

                            <li class="nav-item">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                }
                            </li>
                            <li class="nav-item">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                }

                            </li>







                            @if (User.IsInRole("Administrator") || User.IsInRole("Employee") || User.IsInRole("Employee"))
                            {

                                <div class="dropdown">
                                    <button class="btn btn-dark dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Manage
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li class="nav-item">
                                            <a class="text-dark dropdown-item" asp-area="" asp-controller="LeaveTypes" asp-action="Index">Leave types</a>
                                        </li>
                                        @if (User.IsInRole("Administrator"))
                                        {
                                            <li class="nav-item">
                                                <a class="text-dark dropdown-item" asp-area="" asp-controller="EmployeeList" asp-action="Index">User Management</a>
                                            </li>
                                            <!--<li class="nav-item">
                                                <a class="dropdown-item text-dark" asp-area="Identity" asp-page="/Account/Register">User Management</a>
                                            </li>-->
                                            <li class="nav-item">
                                                <a class="text-dark dropdown-item" asp-area="" asp-controller="Periods" asp-action="Index">Periods</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="text-dark dropdown-item" asp-area="" asp-controller="LeaveAllocation" asp-action="Index">View Employees</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="text-dark dropdown-item" asp-area="" asp-controller="LeaveRequest" asp-action="ListRequest">Leave Requests</a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="LeaveAllocation" asp-action="Details">View Allocation</a>
                                </li>
                            }
                            }

                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
